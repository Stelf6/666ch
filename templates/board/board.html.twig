{% extends "Layout/base.html.twig" %}

{% block body %}
    <div class="text-center p-3">
        <h1>{{boardName}}</h1>
    </div>
    
    <form class="p-5 ">
        <div class="text-center p-3">
            <h3>Create thread</h3>
        </div>

        <div class="form-group">
            <textarea class="form-control" rows="3" placeholder="enter text" name="threadText"></textarea>
        </div>
        <button type="submit" class="btn">Submit</button>
    </form>

    <div>
        <p>Thread list : </p>
    </div>
    {% for thread in threads %}
        <li>
            <a href="/{{boardName}}/thread/{{thread.threadId}}">{{thread.threadId}}</a>
        </li>
    {% endfor %}
{% endblock %}